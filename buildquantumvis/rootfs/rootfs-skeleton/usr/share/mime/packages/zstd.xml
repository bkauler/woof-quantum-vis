<?xml version="1.0" encoding="utf-8"?>
<mime-info xmlns="http://www.freedesktop.org/standards/shared-mime-info">
  <!-- ref: https://www.iana.org/assignments/media-types/application/zstd -->
  
  <mime-type type="application/zstd">
    <comment>Zstd archive</comment>
    <generic-icon name="package-x-generic"/>
    <glob pattern="*.zst"/>
    <glob pattern="*.zstd"/>
  </mime-type>
  
  <mime-type type="application/zstd-compressed-tar">
    <comment>Tar archive (zstd-compressed)</comment>
    <generic-icon name="package-x-generic"/>
    <sub-class-of type="application/zstd"/>
    <glob pattern="*.tar.zst"/>
    <glob pattern="*.tar.zstd"/>
  </mime-type>
  
</mime-info>
