#20230510 custom...
if [ "$URL" == "" ];then
 if [ -f /usr/local/flatpak/custom/${aPARAM,,} ];then
  . /usr/local/flatpak/custom/${aPARAM,,}
  URL="$cURL"
 fi
fi

if [ "$URL" == "" ];then
 pman ${aPARAM} &
 exit
fi

defaultbrowser ${URL} &
###end###
